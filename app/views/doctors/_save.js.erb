$("ul.errors").html("");
<% if @doctor.errors.any? %>
<% @doctor.errors.full_messages.each do |message| %>
 $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
<% end %>
<% else %>
$(".doctor-index").html("<%= escape_javascript(render 'show') %>");
$("#doctor-modal").modal("hide");
<% end %>
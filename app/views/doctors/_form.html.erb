<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="modal-title">
               <h3 align= "center"> Afya Kit for Doctors </h3>
               <h4 align="center" class="top-sntnc"> Set up your practice in less than 2 minutes</h4>
            </div>
        </div>
        <%= form_for @doctor, remote: true, html: { style: "display:inline;" } do |f| %>
            <div class="modal-body">
                <ul class="errors"></ul>
                <div class="form-group">
                  <%= f.label :first_name, class:"control-label" %>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :last_name, class: "control-label" %>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <%= f.fields_for :user, @user, remote: true, html: { style: "display:inline;" } do |u| %>
                    <div class="form-group">
                      <%= u.label :username, class:"control-label" %>
                      <%= u.text_field :username, class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= u.label :email, class:"control-label" %><br />
                      <%= u.email_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= u.label :password, class:"control-label" %><br />
                      <%= u.password_field :password, class: "form-control" %>
                    </div>
                <% end %>
            </div>
            <div class="modal-footer">
                <%= f.submit "Sign Up For Free", class: "btn btn-danger btn-reddish" %>
                <%= link_to "Close", signup_path, class: "btn btn-default", data: {dismiss: "modal"} %>
           </div>
        <% end %>
  </div>
</div>
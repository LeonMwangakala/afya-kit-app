<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Add New Problem</h4>
        </div>
        <%= form_for @problem, remote: true, html: { style: "display:inline;" } do |f| %>
            <div class="modal-body">
                <ul class="errors"></ul>
                <div class="form-group row">
                    <div class=" control-label col-sm-2">
                        <%= f.label :condition %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.radio_button :condition, "Active" %> Active  
                        <%= f.radio_button :condition, "Inactive" %> Inactive
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-sm-2"> 
                        <%= f.label :issue_name, "Problem or Issue" %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.text_field :issue_name, class: "form-control", placeholder: "Type problem name" %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-sm-2"> 
                        <%= f.label :problem_type, "Type" %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.radio_button :problem_type, "Acute" %> Acute  
                        <%= f.radio_button :problem_type, "Chronic" %> Chronic
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-sm-2"> 
                        <%= f.label :start_date, "Start Date" %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.text_field :start_date, class: "form-control", placeholder: "DD/MM/YYYY" %>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-sm-2"> 
                        <%= f.label :comment, "Comments" %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.text_area :comment, class: "form-control" %>
                    </div>
                </div>
            </div>
                <div class="modal-footer">
                    <div class="form-group">
                      <%= f.submit "Save", class: "btn btn-danger btn-reddish" %>
                      <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
                    </div>

                </div>
            
        <% end %>
  </div>
</div>
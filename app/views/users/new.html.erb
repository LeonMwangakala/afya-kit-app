<div class= "wrapper">
    <div id="content-wrapper">
        <div class= "column">
            <h4 class= "page-header"> Sign Up</h4>
        </div>
        <div align="center">
            <div class="panel panel-default panel-signup">
                <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                    <div class="panel-body">
                        Hello! <i class="fa fa-user-md fa-lg"></i>
                        <div class="form-group">
                            <div class="control-label col-sm-2">
                                <%= f.label :username %>
                            </div>
                            <div class="col-sm-8">
                                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-sm-2"> 
                                <%= f.label :email %>
                            </div>
                            
                            <div class="col-sm-8">
                                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-sm-2"> 
                                <%= f.label :password %>
                            </div>
                            
                            <div class="col-sm-8">
                                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
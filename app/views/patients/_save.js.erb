$("ul.errors").html("");
<% if @patient.errors.any? %>
<% @patient.errors.full_messages.each do |message| %>
 $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
<% end %>
<% else %>
$(".patient-index").html("<%= escape_javascript(render 'show') %>");
$("#patient-modal").modal("hide");
<% end %>
